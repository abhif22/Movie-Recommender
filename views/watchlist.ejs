<%include templates/header.ejs%>

<div class="container" style="margin-top: 10%;">
<%for(block=0;block<(data.length/3);block++){%>
	<div class="row" style="margin: auto 30px;margin-top: 30px;">
		<div class="card-deck">
		<%for(i=0;i<3&&(i+(block*3)<data.length);i++){%>
		  <div class="card" style="width: 20rem;" id="<%=data[i+(block*3)].id%>">
		    <img class="card-img-top" src="http://image.tmdb.org/t/p/w342/<%=data[i+(block*3)].poster_path%>" alt="Card image cap" style="height: 20rem;">
		    <div class="card-block">
		      <h4 class="card-title"><%=data[i+(block*3)].title%><span class="fav_icon" data-toggle="tooltip" data-placement="bottom" title="Click to Remove From Watchlist" style="color: red" data-movie_id="<%=data[i+(block*3)].id%>">&hearts;</span></h4>
		      <p class="card-text" style="text-align: justify;"><%=data[i+(block*3)].overview%></p>
		    </div>
		    <div class="card-footer">
		      <a href="/explore/movies/<%=data[i+(block*3)].id%>" class="btn btn-primary">More Info</a>
		    </div>
		  </div>
  		<%}%>
		</div>
	</div>
	<%}%>
</div>

<%include templates/footer.ejs%>